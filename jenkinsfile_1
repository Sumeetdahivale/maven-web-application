

pipeline {

agent {
  label 'node'
}
    
    tools {
  maven 'maven3.8.5'
}
triggers {
  pollSCM('* * * * *')
}
options {
  timestamps()
}

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/Sumeetdahivale/maven-web-application.git'

            }
            }
            stage("pack"){
                steps{
                    sh "mvn clean package"
        
                }
            }
            stage("deploy"){
                steps{
                    sh "mvn deploy"
                }
            }
            
        }  
}
